/* pages/detail/detail.wxss */
@import "../../wxParse/wxParse.wxss";
page{
	background: rgb(245,246,247);
}
view{
	box-sizing: border-box;
}
.slider swiper{
    width: 100%;
    height: 400rpx;
}
.slider image{
    width:100%;
	height:400rpx;
}
.info-box{
    display: flex;
	background: #fff;
	padding: 40rpx 20rpx;
	margin-bottom: 10rpx;
}
.info{
    flex: 1;
    text-align: center;
}
.info text{
	color: rgb(243, 173, 100);
	font-size: 30rpx;
}
.detailitem{
	display: flex;
}
map{
	width: 100%;
	height: 400rpx;
}
.name{
	padding: 20rpx;
	font-size: 30rpx;
	font-weight: 300;
	margin-bottom: 10rpx;
	background: #fff;
}
.icon{
	width: 60rpx;
	margin:0 auto;
}
.icon image{
	width: 60rpx;
	height: auto;
}
.detail{
	background: #fff;
	margin-bottom: 10rpx;
	padding: 25rpx 0;
	color: rgb(84,85,87);
}
.detail .detailitem{
	padding: 10rpx 0 10rpx 30rpx;
}
.detail .label{
	color: rgb(178, 179, 180)
}
.title{
	border-left: 8rpx solid rgb(243, 173, 100);
	font-size: 30rpx;
	padding-left:20rpx; 
	font-weight: bold;
}
.description{
	background: #fff;
	padding: 25rpx 0;
	margin-bottom: 10rpx;
}
.description image{
	width: 100%!important;
	height: auto;
}
.content{
	margin-top: 15rpx;
	padding: 0 28rpx 0;
	color: rgb(84,85,87);
}
.map{
	background: #fff;
	padding: 25rpx 0;
	margin-bottom: 60rpx;
}
.mapwrap{
	padding: 25rpx;
}
.tags{
	display: flex;
	color: rgb(243, 173, 100);
	font-size: 24rpx;
	font-weight: 300;
	margin-top: 5rpx;
}
.tags view{
	padding: 2rpx;
	border-radius: 5rpx;
	margin-right: 10rpx;
}
.telcall{
	position: fixed;
	bottom: 0;
	width: 100%;
	height: 80rpx;
	background: rgb(243, 173, 100);
	color:#fff;
	text-align: center;
	line-height: 80rpx;
	font-weight: bold;
}